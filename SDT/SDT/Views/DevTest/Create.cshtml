@{
    ViewBag.Title = "Dev Test";
}

<h1 class="page-header">Create</h1>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form id="frmCreateStudent" class="form-horizontal" role="#">
            <div class="form-group">
                <label class="col-sm-2 control-label">Campaingn Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" data-bind="value: model.campaingnName" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Date</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" data-bind="value: model.date" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Clicks </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" data-bind="value: model.clicks" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Conversions </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" data-bind="value: model.conversions" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Impressions </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" data-bind="value: model.impressions" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Affiliate Name </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" data-bind="value: model.affiliateName" />
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-2"></label>
                <div class="col-sm-10 btn-toolbar">
                    <a class="btn btn-success" href="#" data-bind="click: create">
                        Create
                    </a>
                    <a class="btn btn-info" href="#" data-bind="click: reset">
                        Reset
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>

@section scripts{
    <script>
        (function () {
            require(["ko", "vm.devtest.create"], function (ko, vm) {
                ko.applyBindingsWithValidation(vm);
            });
        })();
    </script>
}